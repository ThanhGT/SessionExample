<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <servlet>
        <servlet-name>CreateSession</servlet-name>
        <servlet-class>com.thanhtran.sessionexample.servlet.CreateSession</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ReadSession</servlet-name>
        <servlet-class>com.thanhtran.sessionexample.servlet.ReadSession</servlet-class>
    </servlet>
    
   <servlet>
        <servlet-name>KillSession</servlet-name>
        <servlet-class>com.thanhtran.sessionexample.servlet.KillSession</servlet-class>
    </servlet>-->
    
    <servlet-mapping>
        <servlet-name>CreateSession</servlet-name>
        <url-pattern>/CreateSession.do</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ReadSession</servlet-name>
        <url-pattern>/ReadSession.do</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>KillSession</servlet-name>
        <url-pattern>/KillSession.do</url-pattern>
    </servlet-mapping>
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
